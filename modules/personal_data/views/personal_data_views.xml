<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="personal_data_view_form" model="ir.ui.view">
        <field name="name">personal.data.form</field>
        <field name="model">personal.data</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" required="1"/>
                    <field name="email" required="1"/>
                    <field name="phone"/>
                    <field name="website"/>
                    <field name="address"/>
                    <field name="summary"/>
                </group>
                <group>
                    <field name="experience_ids" type="one2many">
                        <tree>
                            <field name="company_name"/>
                            <field name="job_title"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </tree>
                    </field>
                </group>
                <group>
                    <field name="education_ids" type="one2many">
                        <tree>
                            <field name="school_name"/>
                            <field name="degree"/>
                            <field name="major"/>
                            <field name="graduation_year"/>
                        </tree>
                    </field>
                </group>
                <group>
                    <field name="awards" type="one2many">
                        <tree>
                            <field name="institution"/>
                            <field name="title"/>
                            <field name="date"/>
                        </tree>
                    </field>
                </group>
                <group>
                    <field name="skills" type="text"/>
                    <field name="references" type="text"/>
                    <field name="languages" type="text"/>
                    <field name="volunteer_experience" type="text"/>
                </group>
            </form>
        </field>
    </record>

    <record id="personal_data_view_tree" model="ir.ui.view">
        <field name="name">personal.data.tree</field>
        <field name="model">personal.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="summary"/>
            </tree>
        </field>
    </record>

    <record id="personal_data_search" model="ir.ui.view">
        <field name="name">personal.data.search</field>
        <field name="model">personal.data</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.server" id="print_data">
        <field name="name">Print Data</field>
        <field name="model_id" ref="model_personal_data"/>
        <field name="state">code</field>
        <field name="code">
            raise UserError(record.name, record.summary, record.experience_ids)
        </field>
    </record>

    <record id="personal_data_action" model="ir.actions.act_window">
        <field name="name">Personal Data</field>
        <field name="res_model">personal.data</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
