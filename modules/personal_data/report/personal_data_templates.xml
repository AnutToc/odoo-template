<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_personal_data">
        <t t-foreach="docs" t-as="data">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>
                            <span t-field="data.name"/>
                        </h2>
                        <div>
                            <strong>Summary: </strong>
                            <span t-field="data.summary"/>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Company</th>
                                    <th>Dates</th>
                                    <th>Responsibilities</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="data.experience_ids" t-as="experience">
                                    <tr>
                                        <td>
                                            <span t-field="experience.company_name"/>
                                            <span t-field="experience.start_date" format="dd/MM/yyyy"/> - 
                                            <span t-field="experience.end_date" t-if="experience.end_date" format="dd/MM/yyyy"/>
                                        </td>
                                        <span t-field="experience.responsibilities"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>